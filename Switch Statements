// Switch Statements in Practice

const day = 'monday';

switch (day) {
    case 'monday': // day === 'monday'
        console.log('plan coding projects');
        console.log('begin programming');
        break;
    case 'tuesday':
        console.log('bug Kevin');
        break;
    case 'wednesday':
    case 'thursday':
        console.log('Write code examples');
        break;
    case 'friday':
        console.log('write in blog');
        break;
    case 'saturday':
    case 'sunday':
        console.log('enjoy the weekend');
        break;
    default:
        console.log('Not a valid day');
}

// If it were to be written by using Else If Statements, it will work however the above is written with a different syntax - the below will also be a little bit harder to read.

if (day === 'monday') {
    console.log('plan coding projects');
    console.log('begin programming');
} else if (day === 'tuesday') {
    console.log('bug Kevin');
} else if (day === 'wednesday' || day === 'thursday'); {
    console.log('Write code examples');
} else if (day === 'friday') {
    console.log('write in blog');
} else if (day === 'saturday' || day === 'sunday'); {
    console.log('enjoy the weekend');
} else {
    console.log('Not a valid day');
}